<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - VolleyballNet</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @{
    if (ViewBag.gender == "female")
    {
        <link href="@Url.Content("~/Content/Styles/CommonW.css")" rel="stylesheet" type="text/css" />
    }
    else
    {
            <link href="@Url.Content("~/Content/Styles/Common.css")" rel="stylesheet" type="text/css" />
    }
    }

    @*@Styles.Render( "~/Content/css" )*@
    @Scripts.Render( "~/bundles/modernizr" )
    @RenderSection( "css" , false )
</head>
<body>
    <div id="container">
        <header>
            <div id="header">
                <div class="content-wrapper">
                    @*<div class="float-left">
                            <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
                        </div>*@
                    <div class="float-right">
                        @*<section id="login">
                                @Html.Partial("_LoginPartial")
                            </section>*@
                        <nav>
                            <div class="menu">
                                <ul id="menu">
                                    <li id="imageLogo"></li>
                                    <li id="vb"><img src="~/Content/Images/thisisv.png" width="181" height="17" /></li>
                                    <li>@Html.ActionLink( "home" , "Index" , "Home" )</li>
                                    <li>@Html.ActionLink( "games" , "Games" , "Game" )</li>
                                    <li>@Html.ActionLink( "teams" , "Teams" , "Team" )</li>
                                    <li>@Html.ActionLink( "players" , "Players" , "Player" )</li>
                                    <li>@Html.ActionLink( "contact" , "Contact" , "Home" )</li>
                                    <li class="gender active">@Html.ActionLink( "men" , "Index", "Home", new { gender = "male" }, null)</li>
                                    <li class="gender">@Html.ActionLink( "women" , "Index" , "Home", new { gender = "female" }, null)</li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection( "featured" , required: false )
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
    </div>
    <footer>
        <div id="footer">
            <div class="content-wrapper">
                <div class="float-left">
                    <p>Copyright&copy; @DateTime.Now.Year Volleyball League - All rights reserved</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render( "~/bundles/jquery" )
    @RenderSection( "scripts" , required: false )

    <script type="text/javascript">
        //var selector = '.gender';

        //$(selector).on('click', function () {
        //    $(selector).removeClass('active');
        //    $(this).addClass('active');
        //});

    </script>
</body>
</html>
