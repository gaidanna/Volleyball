<Window x:Class="Volleyball.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VolleyballNet" Height="469" Width="600" Loaded="Window_Loaded" Icon="D:\Source\Volleyball\Volleyball\Resources\iconVB.jpg">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Height="399px" Width="592px">
            <Grid.Background>
                <ImageBrush ImageSource="..\Resources\StartIm.jpg"/>
            </Grid.Background>
        </Grid>
        <Grid Grid.Row="1">

            <StackPanel Background="#FF55A6B8" Orientation="Horizontal" Height="40px">
                <Button Content="PLAYERS" x:Name="AddPlayer" Padding="4" Height="40" Width="197" Click="AddPlayer_Click" Background="#FF9B0000" Foreground="White"/>
                <Button Content="TEAMS" x:Name="AddTeam" Padding="4" Height="40" Width="198" Click="AddTeam_Click" Background="#FF9B0000" Foreground="White"/>
                <Button Content="GAMES" x:Name="AddGame" Padding="4" Height="40" Width="197" Click="AddGame_Click"  Background="#FF9B0000" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
