<Window x:Class="Volleyball.AddPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddPlayer" Height="300" Width="300" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Width="60" Margin="4" Text="Team: "></TextBlock>
        <ComboBox Grid.Row="0" Name="teamsCombobox" Grid.Column="1" ItemsSource="{Binding Path=listOfTeams}" DisplayMemberPath="Name" Margin="4" Height="25" Width="200" HorizontalAlignment="Left" />
        <Grid Grid.Row="1" Name="AddControl" Grid.ColumnSpan="2">
        </Grid>
    </Grid>
</Window>
